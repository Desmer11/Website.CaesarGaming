@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CaesarGaming</title>
    <!-- Googleapis Fonts: For Roboto font-family -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet" />
    <!-- Font Awesome Library: For Icons in Sidebar -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   NAV BAR -->
    <div class="wrapper">
        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="h-100">
                <div class="sidebar-logo">
                    <a href="@Url.Action(" Index", "Home" )">
                        <!-- Logo -->
                        <img src="~/media/received_2683688488373055-removebg-preview.png" alt="CaesarGaming Logo">
                    </a>
                </div>
                <!-- Sidebar Navigation -->
                <ul class="sidebar-nav">
                    <li class="sidebar-header">Navigation</li>
                    <!-- Profile -->
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="fa-solid fa-list pe-2"></i>
                            Profile
                        </a>
                    </li>
                    <!-- Login -->
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#auth"
                           aria-expanded="false" aria-controls="auth">
                            <i class="fa-regular fa-user pe-2"></i>
                            Login
                        </a>
                        <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="@Url.Action(" Login", "Account" )" class="sidebar-link">Login</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="@Url.Action(" Register", "Account" )" class="sidebar-link">Register</a>
                            </li>
                        </ul>
                    </li>
                    <!-- Games -->
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#pages"
                           aria-expanded="false" aria-controls="pages">
                            <i class="fa-regular fa-file-lines pe-2"></i>
                            Games
                        </a>
                        <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="@Url.Action(" Games", "Game" )" class="sidebar-link">Games</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="@Url.Action(" Info", "Game" )" class="sidebar-link">Info</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="@Url.Action(" Tables", "Game" )" class="sidebar-link">Tables</a>
                            </li>
                        </ul>
                    </li>
                    <!-- Contact -->
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#dashboard"
                           aria-expanded="false" aria-controls="dashboard">
                            <i class="fa-solid fa-sliders pe-2"></i>
                            Contact
                        </a>
                        <ul id="dashboard" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">DK</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">MK</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="@Url.Action(" Contact", "Home" )" class="sidebar-link">Info</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   MAIN CONTENT -->
        <div id="main">
            <div class="content">
                <nav class="navbar navbar-expand px-3 border-bottom">
                    <!-- Button for sidebar toggle -->
                    <button class="btn" type="button" data-bs-theme="dark">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </nav>
                <br>
                <br>
                <h1>Welcome to CaesarGaming</h1>
                <p>Main Content</p>
            </div>
        </div>

        <!-- >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>   FOOTER -->
        <footer id="footer">
            <div class="footer-content">
                <div class="footer-links">
                    <a href="@Url.Action(" Index", "Home" )">Home</a>
                    <a href="@Url.Action(" Info", "Home" )">Info</a>
                    <a href="@Url.Action(" Tables", "Home" )">Tables</a>
                </div>
                <div class="social-icons">
                    <p id="contact-txt">Contact</p>
                    <a href="https://facebook.com/yourpage"><img src="~/media/facebook-logo-white.png" alt="Facebook"></a>
                    <a href="https://twitter.com/yourpage"><img src="~/media/X_logo_2023_(white).png" alt="Twitter"></a>
                    <a href="https://instagram.com/yourpage"><img src="~/media/2227.jpg" alt="Instagram"></a>
                    <a href="https://linkedin.com/yourpage"><img src="~/media/linkedin-icon-1024x1024-k39l5ziu.png" alt="LinkedIn"></a>
                </div>
                <p id="copyright">© 2025 CaesarGaming. All rights reserved.</p>
            </div>
        </footer>

        <script src="~/js/site.js"></script>

        <!-- Bootstrap or Links -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
